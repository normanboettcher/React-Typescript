{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "jsx": "react",
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "moduleResolution":"Node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
  
}